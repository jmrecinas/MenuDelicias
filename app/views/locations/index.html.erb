<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Ubi codigo</th>
      <th>Ubi departamento</th>
      <th>Ubi provincia</th>
      <th>Ubi distrito</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.ubi_codigo %></td>
        <td><%= location.ubi_departamento %></td>
        <td><%= location.ubi_provincia %></td>
        <td><%= location.ubi_distrito %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
